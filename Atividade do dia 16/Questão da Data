#include <stdio.h>

int main()
{
  //Declaração de Variáveis
    int dia, mes, ano;
    
  //Entrada de Dados
    printf ("Informe o dia: ");
    scanf ("%d", &dia);
    printf ("Informe o mês: ");
    scanf ("%d", &mes);
    printf ("Informe o ano: ");
    scanf ("%d", &ano);
    
  //Saída de Dados
    printf ("A data exata é 0%d/0%d/%d", dia, mes, ano);

    return 0;
}
